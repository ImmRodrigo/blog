<h1>Crear articulo</h1>
<%= form_for(@article) do |f| %>
	 <% @article.errors.full_messages.each do |message| %>
	 	<div class="be-red">
	 		*<%= message %>
	 	</div>
	 <%end%> 
	 <div class="field">
	 	<%= f.text_field :title, placeholder: "Titulo"%>
	 </div>
	 <div class="field">
	 	<%= f.text_area :body, placeholder: "Escribe aqui el articulo"%>
	 </div>
	 <div>
	 	<%= f.submit "Guardar" %>
	 </div>
 <%end%>